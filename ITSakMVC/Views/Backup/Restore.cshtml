@model List<string>
@{
    ViewData["Title"] = "Restore";
}

<h1>Restore Database</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Restore">
            <div class="form-group">
                Select Backup:
                <select name="backupFile">
                    @foreach (var backupfiles in Model)
                    {
                        <option value="@backupfiles">@backupfiles</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Restore" class="btn btn-primary" />
            </div>
            <h3 style="color:rebeccapurple"> @ViewBag.ConfirmedMessage</h3>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
